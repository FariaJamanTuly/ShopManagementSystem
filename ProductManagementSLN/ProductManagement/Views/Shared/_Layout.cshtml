<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
    @RenderSection("head", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Product Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggler="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar nav me-auto mb-2 mb-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {
                            @*<li class="nav-item">
                                @Html.ActionLink("User Role Edit", "Index", "Admin", new { area = "" }, new { @class = "nav-link active" })
                            </li>*@

                            <li class="nav-item">
                                @Html.ActionLink("Create And Edit Role", "CreateRole", "Admin", new { area = "" }, new { @class = "nav-link active" })
                            </li>
                        }
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Product", new { area = "" }, new { @class = "nav-link active" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Create Product", "Create", "Product", new { area = "" }, new { @class = "nav-link active" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Create Supplier", "Index", "Supplier", new { area = "" }, new { @class = "nav-link active" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Hello"+User.Identity.Name,"", new { area = "" }, new { @class = "nav-link active" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "lgout", "Account", new { area = "" }, new { @class = "nav-link active" })
                        </li>
                    }
                    else   
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "nav-link active" })
                        </li>

                    }

                </ul>
                <form class="d-flex">
                    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                    {
                        @Html.TextBox("SearchString", null, htmlAttributes: new { @class = "form-control me-2", @type = "search", @placeholer = "Search" })
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    }

                </form>
            </div>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center"> &copy; @DateTime.Now.Year - Product Management &reg;</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/custom.js"></script>
</body>
</html>
